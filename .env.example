# Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Evolution API (Bot)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_INSTANCE=cajurona

# Server (Bot webhook)
BOT_PORT=3001
BOT_WEBHOOK_SECRET=your-webhook-secret

# Whitelist de grupos (vazio = aceita todos)
# Formato: IDs separados por vírgula
# Descubra o ID enviando uma msg no grupo e vendo o log do bot
ALLOWED_GROUPS=

# Admin (Painel de aprovações de motoristas)
VITE_ADMIN_SECRET=sua-senha-admin

# Super Admin (full admin access to all groups)
# Comma-separated phone numbers (same format as in the DB, e.g. "5579998223366")
VITE_SUPER_ADMIN_PHONES=5579999364958,5579998328942,557998223366,79991731788
